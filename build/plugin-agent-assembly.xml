<?xml version="1.0"?>
<assembly>
  <id>plugin-agent-assembly</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <files>
    <file>
      <source>../parasoft-findings-teamcity-agent/teamcity-plugin.xml</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>com.parasoft:parasoft-findings-teamcity-agent</include>
        <include>com.parasoft:parasoft-findings-teamcity-common</include>
      </includes>
      <binaries>
        <outputDirectory>lib</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <includes>
              <include>*</include>
            </includes>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>

